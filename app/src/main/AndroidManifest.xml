<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firstry.gmase.quantilife">

    <uses-permission android:name="android.permission.INTERNET">
    </uses-permission>
    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/borde_black"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.firstry.gmase.quantilife.MyApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.firstry.gmase.quantilife.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.firstry.gmase.quantilife.activities.StatsActivity"
            android:label="@string/progress"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.firstry.gmase.quantilife.activities.QuestionsActivity"
            android:label="Questions"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
    </application>

</manifest>