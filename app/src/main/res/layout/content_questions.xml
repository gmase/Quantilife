<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.QuestionsActivity"
    tools:showIn="@layout/app_bar_questions">

    <ImageView
        android:id="@+id/IVAllDone"
        android:layout_width="120sp"
        android:layout_height="180sp"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:paddingTop="10sp"
        android:src="@drawable/all_done" />

    <TextView
        android:id="@+id/backGroundTV"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/IVAllDone"
        android:gravity="center_horizontal|top"
        android:paddingTop="15sp"
        android:text="@string/noCards" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:clipToPadding="false" />
</RelativeLayout>
